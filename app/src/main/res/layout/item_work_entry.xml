<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/transparent">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/all_list_item"
        android:elevation="2dp">

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/text_work_entry_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toStartOf="@+id/text_work_entry_item_dates"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Task" />

        <TextView
            android:id="@+id/text_work_entry_item_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/text_work_entry_item_title"
            app:layout_constraintTop_toBottomOf="@+id/text_work_entry_item_title"
            tools:text="Notes..." />

        <TextView
            android:id="@+id/text_work_entry_item_dates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_work_entry_item_title"
            tools:text="Start - End" />

        <TextView
            android:id="@+id/text_work_entry_item_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/text_work_entry_item_dates"
            app:layout_constraintTop_toBottomOf="@+id/text_work_entry_item_dates"
            tools:text="Hours" />
    </android.support.constraint.ConstraintLayout>
</FrameLayout>
